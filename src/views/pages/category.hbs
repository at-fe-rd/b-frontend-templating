---
layout: layout.hbs
---
{{> sidebar }}
<div class="content">
	{{> breadcrumbs }}
	<h1 class="page__title">Birthday</h1>
	<div class="page__content">
		<div class="row">
			{{#each categories }}
				<div class="col-md-6 ecard">
					<div class="ecard__thumbnail">
						<a href="./ecarddetail.html">
							<img src="./images/ecard-1.png" alt="Ecard 1">
						</a>
					</div>
					<div class="ecard__labels">
						<span class="label">New</span>
					</div>
					<div class="ecard__overlay">
						<div class="ecard__emersion">
							<h6 class="ecard__title">Special one to remember</h6>
							<div class="ecard__price">
								$20
							</div>
							<div class="ecard__rating">
								<img src="./images/rating-50.gif" alt="5 stars">
							</div>
							<div class="ecard__buttons">
								<a href="#" class="btn-circle btn-circle--preview" data-toggle="modal" data-target="#ec-modal"></a>
								<a href="#" class="btn-circle btn-circle--post"></a>
								<a href="#" class="btn-circle btn-circle--member"></a>
								<a href="#" class="btn-circle btn-circle--check"></a>
								<a href="./detail.html" class="btn-circle btn-circle--detail"></a>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</div>