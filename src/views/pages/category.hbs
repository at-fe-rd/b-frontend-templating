---
layout: layout.hbs
---
{{> sidebar }}
<div class="content">
	{{> breadcrumbs }}
	<h1 class="page__title">Daniel Wellington</h1>
	<div class="page__content">
		<div class="row">
			{{#each products}}
				<div class="col-md-6 ecard">
					<div class="ecard__thumbnail">
						<a href="#">
							<img src="{{this.image}}" alt="Ecard 1">
						</a>
					</div>
					<div class="ecard__labels">
						<span class="label">New</span>
					</div>
					<div class="ecard__overlay">
						<div class="ecard__emersion">
							<h6 class="ecard__title">{{this.name}}</h6>
							<div class="ecard__price">
								{{this.price}}
							</div>
							<div class="ecard__rating">
								<img src="./images/sample/rating/5-star.png" alt="5 stars">
							</div>
							<div class="ecard__buttons">
								<a href="#" class="btn-circle btn-circle--buy"></a>
								<a href="#" class="btn-circle btn-circle--favious"></a>
								<a href="#" class="btn-circle btn-circle--chat"></a>
								<a href="#" class="btn-circle btn-circle--detail"></a>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</div>